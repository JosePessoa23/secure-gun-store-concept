@startuml hello

'-Style----------------------------------------------------------------------------------------------------------------

autonumber

skinparam DefaultTextAlignment center

skinparam BackgroundColor #fafdff

skinparam participant {
    BackgroundColor AWS_BG_COLOR
    BorderColor AWS_BORDER_COLOR
}

skinparam sequence {
    LifeLineBorderColor DodgerBlue
    LifeLineBackgroundColor APPLICATION

    ActorBackgroundColor APPLICATION
    ActorBorderColor DodgerBlue

    BackgroundColor #FFFFFF
    ArrowColor DodgerBlue
    BorderColor DodgerBlue
    ParticipantBorderColor DodgerBlue

    GroupBorderColor #082642
    GroupBackgroundColor APPLICATION
}

'-Title----------------------------------------------------------------------------------------------------------------

title US 04 - Approve/deny a license

'-Actors/Participants--------------------------------------------------------------------------------------------------

actor "<b>Client" as A
participant "<b>:LicenseRoute" as CR
participant "<b>:LicenseController" as CC
participant "<b>:LicenseMapper" as CM
participant "<b>:LicenseService" as CS
participant "<b>license\n<b>:License" as L
participant "<b>licenseDTO\n<b>:LicenseDTO" as CD
participant "<b>:LicenseRepository" as CREP
participant "<b>:LicenseSchema" as CSC
participant "<b>:LicenseApprovalRepository" as LAR


'-Associations---------------------------------------------------------------------------------------------------------

activate A

A -> CR: HTTP request (POST)
activate CR

CR -> CC: create(req, res, next)
activate CC

CC -> CS : approveLicense(approvalLicenseID, status)
activate CS

CS -> LAR : licenseApplication = updateStatus(approvalLicenseID, status)
activate LAR
deactivate LAR
CS -> L** : license = create(licenseApplication)
CS -> CREP : save(license)
activate CREP
CREP -> CSC: save
activate CSC
deactivate CSC
deactivate CREP
CS -> CM : licenseDTO=toDTO(license)
activate CM
CM -> CD : licenseDTO=create()
activate CD
deactivate CD
deactivate CM
CS -> CC : licenceDTO
deactivate CS




deactivate CS
CC -> CR: licenseDTO
deactivate CC

CR -> A: licenseDTO
deactivate CR
'----------------------------------------------------------------------------------------------------------------------

@enduml